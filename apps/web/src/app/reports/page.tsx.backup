'use client';

import { useState, useEffect } from 'react';
import { reportsApi, clientsApi, usersApi } from '@/lib/api';
import { Download, Filter, X, Check } from 'lucide-react';

export default function ReportsPage() {
    const [reportType, setReportType] = useState<'time' | 'tasks'>('tasks');
    const [groupBy, setGroupBy] = useState<string>('client');
    useEffect(() => {
        const fetchFilters = async () => {
            try {
                const [clientsData, usersData] = await Promise.all([
                    clientsApi.getAll(),
                    usersApi.getAll()
                ]);
                setClients(clientsData);
                setUsers(usersData);
            } catch (error) {
                console.error('Failed to fetch filter options:', error);
            }
        };
        fetchFilters();
    }, []);

    useEffect(() => {
        const fetchData = async () => {
            setIsLoading(true);
            try {
                if (reportType === 'time') {
                    const result = await reportsApi.getTimeReport({
                        groupBy: groupBy as 'client' | 'user',
                        dateFrom: dateFrom || undefined,
                        dateTo: dateTo || undefined,
                        clientId: selectedClients[0] || undefined,
                    });
                    setData(Array.isArray(result) ? result : []);
                } else {
                    const result = await reportsApi.getTaskReport({
                        groupBy: groupBy as 'client' | 'status' | 'assignee',
                        dateFrom: dateFrom || undefined,
                        dateTo: dateTo || undefined,
                        clientId: selectedClients[0] || undefined,
                        status: selectedStatuses[0] || undefined,
                        priority: selectedPriorities[0] || undefined,
                    });
                    setData(Array.isArray(result) ? result : []);
                }
            } catch (error) {
                console.error('Failed to fetch report data:', error);
                setData([]);
            } finally {
                setIsLoading(false);
            }
        };

        fetchData();
    }, [reportType, groupBy, dateFrom, dateTo, selectedClients, selectedStatuses, selectedPriorities]);

    const handleExport = async () => {
        try {
            if (reportType === 'time') {
                await reportsApi.exportCSV({
                    groupBy: groupBy as 'client' | 'user',
                    dateFrom: dateFrom || undefined,
                    dateTo: dateTo || undefined,
                    clientId: selectedClients[0] || undefined,
                });
            }
        } catch (error) {
            console.error('Failed to export CSV:', error);
        }
    };

    const toggleClient = (clientId: string) => {
        setSelectedClients(prev =>
            prev.includes(clientId) ? prev.filter(id => id !== clientId) : [clientId]
        );
    };

    const toggleStatus = (status: string) => {
        setSelectedStatuses(prev =>
            prev.includes(status) ? prev.filter(s => s !== status) : [status]
        );
    };

    const togglePriority = (priority: string) => {
        setSelectedPriorities(prev =>
            prev.includes(priority) ? prev.filter(p => p !== priority) : [priority]
        );
    };

    const clearFilters = () => {
        setDateFrom('');
        setDateTo('');
        setSelectedClients([]);
        setSelectedStatuses([]);
        setSelectedPriorities([]);
    };

    const activeFiltersCount = selectedClients.length + selectedStatuses.length + selectedPriorities.length + (dateFrom ? 1 : 0) + (dateTo ? 1 : 0);

    const handleSort = (column: string) => {
        if (sortBy === column) {
            setSortOrder(sortOrder === 'asc' ? 'desc' : 'asc');
        } else {
            setSortBy(column);
            setSortOrder('desc');
        }
    };

    const sortedData = [...data].sort((a, b) => {
        if (!sortBy) return 0;

        let aVal: any, bVal: any;

        if (sortBy === 'name') {
            aVal = reportType === 'time'
                ? (groupBy === 'client' ? a.client : a.user)
                : a.group;
            bVal = reportType === 'time'
                ? (groupBy === 'client' ? b.client : b.user)
                : b.group;
        } else if (sortBy === 'total') {
            aVal = reportType === 'time' ? (a.totalHours || 0) : a.totalTasks;
            bVal = reportType === 'time' ? (b.totalHours || 0) : b.totalTasks;
        } else if (sortBy === 'entries') {
            aVal = a.entries?.length || 0;
            bVal = b.entries?.length || 0;
        } else if (sortBy === 'new') {
            aVal = a.byStatus?.NEW || 0;
            bVal = b.byStatus?.NEW || 0;
        } else if (sortBy === 'inProgress') {
            aVal = a.byStatus?.IN_PROGRESS || 0;
            bVal = b.byStatus?.IN_PROGRESS || 0;
        } else if (sortBy === 'done') {
            aVal = a.byStatus?.DONE || 0;
            bVal = b.byStatus?.DONE || 0;
        } else if (sortBy === 'highPriority') {
            aVal = a.byPriority?.HIGH || 0;
            bVal = b.byPriority?.HIGH || 0;
        }

        if (typeof aVal === 'string') {
            return sortOrder === 'asc'
                ? aVal.localeCompare(bVal)
                : bVal.localeCompare(aVal);
        }

        return sortOrder === 'asc' ? aVal - bVal : bVal - aVal;
    });

    const statuses = [
        { value: 'NEW', label: 'Новая' },
        { value: 'IN_PROGRESS', label: 'В работе' },
        { value: 'REVIEW', label: 'На проверке' },
        { value: 'DONE', label: 'Готово' },
        { value: 'PAUSED', label: 'Приостановлена' }
    ];

    const priorities = [
        { value: 'LOW', label: 'Низкий' },
        { value: 'MEDIUM', label: 'Средний' },
        { value: 'HIGH', label: 'Высокий' }
    ];

    const statusLabels: Record<string, string> = {
        NEW: 'Новая',
        IN_PROGRESS: 'В работе',
        REVIEW: 'На проверке',
        DONE: 'Готово',
        PAUSED: 'Приостановлена'
    };

    return (
        <div className="space-y-6">
            <div className="flex justify-between items-center">
                <h1 className="text-2xl font-bold">Отчеты</h1>
                <div className="flex gap-2">
                    <button
                        onClick={() => setShowFilters(!showFilters)}
                        className={`flex items-center px-4 py-2 rounded-md transition-colors ${showFilters
                            ? 'bg-blue-600 text-white hover:bg-blue-700'
                            : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600'
                            }`}
                    >
                        <Filter className="w-4 h-4 mr-2" />
                        Фильтры
                        {activeFiltersCount > 0 && (
                            <span className="ml-2 px-2 py-0.5 text-xs bg-white text-blue-600 rounded-full font-medium">{activeFiltersCount}</span>
                        )}
                    </button>
                    <button onClick={handleExport} className="flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
                        <Download className="w-4 h-4 mr-2" />
                        Экспорт
                    </button>
                </div>
            </div>

            <div className="bg-white dark:bg-gray-800 rounded-lg shadow border">
                <div className="p-4">
                    <div className="flex gap-3">
                        <button
                            onClick={() => setReportType('tasks')}
                            className={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${reportType === 'tasks'
                                ? 'bg-blue-600 text-white'
                                : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'
                                }`}
                        >
                            По задачам
                        </button>
                        <button
                            onClick={() => setReportType('time')}
                            className={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${reportType === 'time'
                                ? 'bg-blue-600 text-white'
                                : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'
                                }`}
                        >
                            По времени
                        </button>

                        <div className="ml-4 border-l pl-4 flex gap-2">
                            <button
                                onClick={() => setGroupBy('client')}
                                className={`px-3 py-2 rounded-md text-sm transition-colors ${groupBy === 'client'
                                    ? 'bg-gray-200 dark:bg-gray-600 text-gray-900 dark:text-white'
                                    : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'
                                    }`}
                            >
                                Клиенты
                            </button>
                            {reportType === 'time' ? (
                                <button
                                    onClick={() => setGroupBy('user')}
                                    className={`px-3 py-2 rounded-md text-sm transition-colors ${groupBy === 'user'
                                        ? 'bg-gray-200 dark:bg-gray-600 text-gray-900 dark:text-white'
                                        : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'
                                        }`}
                                >
                                    Сотрудники
                                </button>
                            ) : (
                                <>
                                    <button
                                        onClick={() => setGroupBy('status')}
                                        className={`px-3 py-2 rounded-md text-sm transition-colors ${groupBy === 'status'
                                            ? 'bg-gray-200 dark:bg-gray-600 text-gray-900 dark:text-white'
                                            : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'
                                            }`}
                                    >
                                        Статусы
                                    </button>
                                    <button
                                        onClick={() => setGroupBy('assignee')}
                                        className={`px-3 py-2 rounded-md text-sm transition-colors ${groupBy === 'assignee'
                                            ? 'bg-gray-200 dark:bg-gray-600 text-gray-900 dark:text-white'
                                            : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'
                                            }`}
                                    >
                                        Исполнители
                                    </button>
                                </>
                            )}
                        </div>
                    </div>
                </div>

                {showFilters && (
                    <div className="border-t p-4 bg-gray-50 dark:bg-gray-900/50">
                        <div className="flex justify-between items-center mb-4">
                            <h3 className="text-sm font-medium text-gray-700 dark:text-gray-300">Фильтры</h3>
                            {activeFiltersCount > 0 && (
                                <button onClick={clearFilters} className="text-xs text-blue-600 hover:text-blue-700 flex items-center gap-1">
                                    <X className="w-3 h-3" />
                                    Очистить
                                </button>
                            )}
                        </div>

                        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                            <div>
                                <label className="text-xs font-medium text-gray-500 uppercase block mb-2">Период</label>
                                <div className="space-y-2">
                                    <input
                                        type="date"
                                        value={dateFrom}
                                        onChange={(e) => setDateFrom(e.target.value)}
                                        placeholder="С"
                                        className="w-full px-3 py-1.5 text-sm border rounded-md"
                                    />
                                    <input
                                        type="date"
                                        value={dateTo}
                                        onChange={(e) => setDateTo(e.target.value)}
                                        placeholder="По"
                                        className="w-full px-3 py-1.5 text-sm border rounded-md"
                                    />
                                </div>
                            </div>

                            <div>
                                <label className="text-xs font-medium text-gray-500 uppercase block mb-2">Клиенты</label>
                                <div className="space-y-1 max-h-32 overflow-y-auto">
                                    {clients.map(client => (
                                        <label key={client.id} className="flex items-center gap-2 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800 p-1 rounded">
                                            <input
                                                type="checkbox"
                                                checked={selectedClients.includes(client.id)}
                                                onChange={() => toggleClient(client.id)}
                                                className="w-4 h-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500"
                                            />
                                            <span className="text-sm text-gray-700 dark:text-gray-300">{client.name}</span>
                                        </label>
                                    ))}
                                </div>
                            </div>

                            {reportType === 'tasks' && (
                                <>
                                    <div>
                                        <label className="text-xs font-medium text-gray-500 uppercase block mb-2">Статусы</label>
                                        <div className="space-y-1">
                                            {statuses.map(status => (
                                                <label key={status.value} className="flex items-center gap-2 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800 p-1 rounded">
                                                    <input
                                                        type="checkbox"
                                                        checked={selectedStatuses.includes(status.value)}
                                                        onChange={() => toggleStatus(status.value)}
                                                        className="w-4 h-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500"
                                                    />
                                                    <span className="text-sm text-gray-700 dark:text-gray-300">{status.label}</span>
                                                </label>
                                            ))}
                                        </div>
                                    </div>

                                    <div>
                                        <label className="text-xs font-medium text-gray-500 uppercase block mb-2">Приоритеты</label>
                                        <div className="space-y-1">
                                            {priorities.map(priority => (
                                                <label key={priority.value} className="flex items-center gap-2 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800 p-1 rounded">
                                                    <input
                                                        type="checkbox"
                                                        checked={selectedPriorities.includes(priority.value)}
                                                        onChange={() => togglePriority(priority.value)}
                                                        className="w-4 h-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500"
                                                    />
                                                    <span className="text-sm text-gray-700 dark:text-gray-300">{priority.label}</span>
                                                </label>
                                            ))}
                                        </div>
                                    </div>
                                </>
                            )}
                        </div>
                    </div>
                )}
            </div>

            <div className="bg-white dark:bg-gray-800 shadow rounded-lg border">
                {isLoading ? (
                    <div className="p-12 flex justify-center">
                        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
                    </div>
                ) : data.length === 0 ? (
                    <div className="p-12 text-center text-gray-500">Нет данных</div>
                ) : reportType === 'time' ? (
                    <table className="min-w-full">
                        <thead className="bg-gray-50 dark:bg-gray-900">
                            <tr>
                                <th
                                    onClick={() => handleSort('name')}
                                    className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                >
                                    <div className="flex items-center gap-1">
                                        {groupBy === 'client' ? 'Клиент' : 'Сотрудник'}
                                        {sortBy === 'name' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                    </div>
                                </th>
                                <th
                                    onClick={() => handleSort('total')}
                                    className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                >
                                    <div className="flex items-center gap-1">
                                        Часов
                                        {sortBy === 'total' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                    </div>
                                </th>
                                <th
                                    onClick={() => handleSort('entries')}
                                    className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                >
                                    <div className="flex items-center gap-1">
                                        Записей
                                        {sortBy === 'entries' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody className="divide-y">
                            {sortedData.map((item, i) => (
                                <tr key={i} className="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                    <td className="px-6 py-4 text-sm font-medium">{groupBy === 'client' ? item.client : item.user}</td>
                                    <td className="px-6 py-4 text-sm font-medium">{(item.totalHours || 0).toFixed(2)} ч.</td>
                                    <td className="px-6 py-4 text-sm">{item.entries?.length || 0}</td>
                                </tr>
                            ))}
                        </tbody>
                    </table>
                ) : (
                    <table className="min-w-full">
                        <thead className="bg-gray-50 dark:bg-gray-900">
                            <tr>
                                <th
                                    onClick={() => handleSort('name')}
                                    className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                >
                                    <div className="flex items-center gap-1">
                                        {groupBy === 'client' ? 'Клиент' : groupBy === 'status' ? 'Статус' : 'Исполнитель'}
                                        {sortBy === 'name' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                    </div>
                                </th>
                                <th
                                    onClick={() => handleSort('total')}
                                    className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                >
                                    <div className="flex items-center gap-1">
                                        Всего задач
                                        {sortBy === 'total' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                    </div>
                                </th>
                                {groupBy !== 'status' && (
                                    <>
                                        <th
                                            onClick={() => handleSort('new')}
                                            className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                        >
                                            <div className="flex items-center gap-1">
                                                Новые
                                                {sortBy === 'new' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                            </div>
                                        </th>
                                        <th
                                            onClick={() => handleSort('inProgress')}
                                            className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                        >
                                            <div className="flex items-center gap-1">
                                                В работе
                                                {sortBy === 'inProgress' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                            </div>
                                        </th>
                                        <th
                                            onClick={() => handleSort('done')}
                                            className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                        >
                                            <div className="flex items-center gap-1">
                                                Готово
                                                {sortBy === 'done' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                            </div>
                                        </th>
                                    </>
                                )}
                                <th
                                    onClick={() => handleSort('highPriority')}
                                    className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-800"
                                >
                                    <div className="flex items-center gap-1">
                                        Высокий приоритет
                                        {sortBy === 'highPriority' && <span>{sortOrder === 'asc' ? '↑' : '↓'}</span>}
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody className="divide-y">
                            {sortedData.map((item, i) => (
                                <tr key={i} className="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                    <td className="px-6 py-4 text-sm font-medium">
                                        {groupBy === 'status' ? statusLabels[item.group] || item.group : item.group}
                                    </td>
                                    <td className="px-6 py-4 text-sm">{item.totalTasks}</td>
                                    {groupBy !== 'status' && item.byStatus && (
                                        <>
                                            <td className="px-6 py-4 text-sm">{item.byStatus.NEW || 0}</td>
                                            <td className="px-6 py-4 text-sm">{item.byStatus.IN_PROGRESS || 0}</td>
                                            <td className="px-6 py-4 text-sm">{item.byStatus.DONE || 0}</td>
                                        </>
                                    )}
                                    <td className="px-6 py-4 text-sm">{item.byPriority?.HIGH || 0}</td>
                                </tr>
                            ))}
                        </tbody>
                    </table>
                )}
            </div>
        </div>
    );
}
