generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  name       String?
  avatar     String?
  password   String
  hashedRefreshToken String?
  role       Role      @default(EXECUTOR)
  tenantId   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  tasks      Task[]    @relation("AssigneeTasks")
  timeEntries TimeEntry[]
  projects   Client[]  @relation("ProjectMembers")
}

enum Role {
  ADMIN
  MANAGER
  EXECUTOR
  CLIENT
}

model Client {
  id         String   @id @default(uuid())
  name       String
  contact    Json?
  tenantId   String
  tasks      Task[]
  members    User[]   @relation("ProjectMembers")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Task {
  id             String      @id @default(uuid())
  title          String
  description    String?
  clientId       String?
  client         Client?     @relation(fields: [clientId], references: [id])
  assignees      User[]      @relation("AssigneeTasks")
  status         TaskStatus  @default(NEW)
  priority       Priority    @default(MEDIUM)
  dueDate        DateTime?
  tags           String[]    @default([])
  tenantId       String
  timeEntries    TimeEntry[]
  attachments    File[]      @relation("TaskFiles")
  createdById    String
  spentTime      Float       @default(0)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

enum TaskStatus {
  NEW
  IN_PROGRESS
  REVIEW
  DONE
  PAUSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model TimeEntry {
  id            String   @id @default(uuid())
  taskId        String
  task          Task     @relation(fields: [taskId], references: [id])
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  date          DateTime
  durationHours Float
  type          TimeType @default(PAID)
  comment       String?
  createdAt     DateTime @default(now())
}

enum TimeType {
  PAID
  UNPAID
  INTERNAL
}

model File {
  id          String   @id @default(uuid())
  filename    String
  url         String
  mime        String
  size        Int
  uploadedBy  String
  taskId      String?
  task        Task?    @relation("TaskFiles", fields: [taskId], references: [id])
  tenantId    String
  createdAt   DateTime @default(now())
}
