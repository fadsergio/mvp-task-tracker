FROM node:20-alpine

WORKDIR /usr/src/app

# Install dependencies using npm (simpler than pnpm for this case)
COPY package.json ./

# skipped to rely on host node_modules
# RUN npm install

# Copy source
COPY . .

# Generate prisma client explicitly during build (if network allows) or ignore failure
# RUN npx prisma generate || true

EXPOSE 3000

# Install Nest CLI globally
RUN npm install -g @nestjs/cli

# We expect node_modules to be mounted or installed
CMD ["npm", "run", "start:dev"]
